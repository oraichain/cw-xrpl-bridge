{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "vitest/globals"
        ],
        "allowJs": true,
        "esModuleInterop": true
    }
}